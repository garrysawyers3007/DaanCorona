<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b4c78">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DaanCorona is an initiative for the social benefit of Indian workers and their businesses during unfortunate crisis of COVID-19. This is purely a humanitarian venture on a no cost basis."
            android:textColor="@android:color/white"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/profile" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="It provides a platform for buying coupons from and helping out India's largely undigitized small and medium businesses."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>

</FrameLayout>